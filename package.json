{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "clean": "lerna run clean --parallel",
    "test": "tsc -p tsconfig.build.json --noEmit",
    "build": "tsc -b tsconfig.build.json",
    "watch": "tsc -b tsconfig.build.json -w",
    "version": "lerna version",
    "publish": "lerna publish from-git"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciancooper/app-toolkit.git"
  },
  "author": "Lucian Cooper <cooperlucian@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luciancooper/app-toolkit/issues"
  },
  "homepage": "https://github.com/luciancooper/app-toolkit#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@lcooper"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint",
    "*.scss": "stylelint"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@lcooper/commitlint-config": "^1.1.0",
    "@lcooper/eslint-config": "^2.2.1",
    "@lcooper/eslint-config-react": "^2.2.1",
    "@lcooper/eslint-config-typescript": "^1.2.1",
    "@lcooper/eslint-config-typescript-react": "^1.2.1",
    "@lcooper/stylelint-config-scss": "^1.1.1",
    "@types/cross-spawn": "^6.0.2",
    "@types/fs-extra": "^9.0.13",
    "@types/inquirer": "^8.2.0",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.22",
    "@types/semver": "^7.3.9",
    "@types/spdx-correct": "^2.0.0",
    "@types/validate-npm-package-name": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.6.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsdoc": "^37.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^4.3.6",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "rimraf": "^3.0.2",
    "stylelint": "^14.2.0",
    "typescript": "^4.6.2"
  }
}
