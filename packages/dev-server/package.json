{
  "name": "@lcooper/dev-server",
  "version": "0.1.0",
  "description": "Webpack development server with HMR and an error overlay",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./server": "./lib/server.js",
    "./middleware": "./lib/middleware.js",
    "./client/entry": "./dist/entry.js",
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "dist",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "tsc --noEmit",
    "clean": "rimraf lib && rimraf dist",
    "build": "tsc -b tsconfig.json",
    "watch": "tsc -b tsconfig.json --watch",
    "prepublishOnly": "yarn test && yarn build"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciancooper/app-toolkit.git",
    "directory": "packages/dev-server"
  },
  "keywords": [
    "webpack",
    "middleware",
    "hmr"
  ],
  "author": "Lucian Cooper <cooperlucian@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luciancooper/app-toolkit/issues"
  },
  "homepage": "https://github.com/luciancooper/app-toolkit/tree/main/packages/dev-server#readme",
  "dependencies": {
    "@lcooper/dev-overlay": "0.0.4",
    "@lcooper/webpack-messages": "0.1.0",
    "@types/express": "^4.17.13",
    "better-opn": "^2.1.1",
    "chalk": "^4.1.0",
    "express": "^4.17.1",
    "fork-ts-checker-webpack-plugin": "^6.5.0",
    "portfinder": "^1.0.28",
    "webpack-dev-middleware": "^5.3.0"
  },
  "peerDependencies": {
    "webpack": "5.x.x"
  }
}
