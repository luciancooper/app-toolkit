{
  "name": "@lcooper/webpack-messages",
  "version": "0.1.0",
  "description": "Webpack error and warning message formatter",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": "./lib/index.js",
    "./eslint-formatter": "./lib/eslint-formatter.js",
    "./stylelint-formatter": "./lib/stylelint-formatter.js",
    "./package.json": "./package.json"
  },
  "files": [
    "lib",
    "!**/*.tsbuildinfo"
  ],
  "scripts": {
    "lint": "eslint .",
    "test": "tsc --noEmit",
    "clean": "rimraf lib",
    "build": "tsc -b tsconfig.json",
    "watch": "tsc -b tsconfig.json --watch",
    "prepublishOnly": "yarn test && yarn build"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciancooper/app-toolkit.git",
    "directory": "packages/webpack-messages"
  },
  "keywords": [
    "webpack",
    "messages",
    "error",
    "warning"
  ],
  "author": "Lucian Cooper <cooperlucian@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/luciancooper/app-toolkit/issues"
  },
  "homepage": "https://github.com/luciancooper/app-toolkit/tree/main/packages/webpack-messages#readme",
  "dependencies": {
    "@types/eslint": "^8.4.1",
    "chalk": "^4.1.0",
    "js-tokens": "^7.0.0"
  },
  "peerDependencies": {
    "stylelint": ">=14",
    "webpack": "5.x.x"
  },
  "peerDependenciesMeta": {
    "stylelint": {
      "optional": true
    }
  }
}
